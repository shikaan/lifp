{
	"name": "lisp-node",
	"version": "0.0.1-alpha.1",
	"main": "bin/repl.ts",
	"scripts": {
		"start": "bun .",
		"build": "bun build bin/repl.ts --compile --outfile build/lisp",
		"format": "bunx --bun biome format --write",
		"lint": "bunx --bun biome format",
		"postinstall": "mkdir -p .git/hooks && cp ./scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit"
	},
	"engines": {
		"bun": "1.2.13"
	},
	"keywords": [],
	"author": "Manuel Spagnolo",
	"license": "MIT",
	"description": "A single binary lisp iterpreter",
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "2.0.2",
		"@types/node": "^22.15.31",
		"@types/bun": "latest"
	},
	"private": true,
	"peerDependencies": {
		"typescript": "^5"
	}
}
